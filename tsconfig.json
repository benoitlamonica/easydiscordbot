{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "paths": {
      "#/*": ["./vendor/*"],
      "@/*": ["./modules/*"],
      "$/*": ["./commands/*"]
    }
  },
  "include": [
    "types/**/*",
    "vendor/**/*",
    "modules/**/*",
    "commands/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
